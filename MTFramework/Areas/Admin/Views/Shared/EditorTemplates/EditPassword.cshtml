@{
    bool editFlag = false;
    if (ViewBag.EditFlag != null && ViewBag.EditFlag == true)
    {
        editFlag = true;
    }
    if (!editFlag)
    {
    @Html.PasswordFor(model => model, new { @class = "u-iptm" })
    }
    else
    {
    @Html.PasswordFor(model => model, new { @class = "u-iptl" })
    }
}
